<section class="sheet-root t-col" style="gap:12px; height:100%; min-height:0;">
  <header class="t-row">
    <h1 style="margin:0;">{{actor.name}}</h1>
    <div class="t-right muted">{{localize "TSDC.System"}}</div>
  </header>

  <nav class="sheet-tabs t-row" data-group="primary">
    <a class="item" data-tab="main">Básico</a>
    <a class="item" data-tab="rolls">Tiradas</a>
    <a class="item" data-tab="specs">Especializaciones</a>
    <a class="item" data-tab="competences">Competencias</a>
    <a class="item" data-tab="equipment">Equipo</a>
    <a class="item" data-tab="inventory">Inventario</a>
    <a class="item" data-tab="journal">Journal</a>
  </nav>

  <section class="sheet-body">

    {{!-- ================================
          TAB: BÁSICO
          ================================ --}}
    <div class="tab t-col" data-group="primary" data-tab="main" style="gap:12px;">

      <div class="t-grid t-grid-3">
        {{!-- Especie & Trasfondo --}}
        <div class="t-card t-col">
          <h3 style="margin:0 0 6px 0;">Especie & Trasfondo</h3>
          <div class="t-field"><label>Especie</label><input type="text" value="{{system.species.label}}" disabled /></div>
          <div class="t-field"><label>Tamaño</label><input type="text" value="{{system.species.size}}" disabled /></div>
          <div class="t-field"><label>Velocidad</label><input type="text" value="{{system.species.speed}} m/turno" disabled /></div>
          <div class="t-field"><label>Idiomas base</label><input type="text" value="{{#each system.species.languages}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}" disabled /></div>
          <div class="t-field"><label>Idiomas aprendidos</label><input type="text" name="system.species.learned" value="{{system.species.learned}}" placeholder="separados por coma"/></div>
          <div class="t-field"><label>Trasfondo</label><input type="text" value="{{system.background.label}}" disabled /></div>
          {{!-- Afinidad Mayor se oculta para evitar conflictos; será asignada por el flujo de creación --}}
        </div>

        {{!-- Estados: Aguante, Fatiga y Desgaste --}}
        <div class="t-card t-col">
          <h3 style="margin:0 0 6px 0;">Estados</h3>
          <div class="t-row" style="gap:12px;">
            <div class="t-field">
              <label>Aguante</label>
              <input type="number" value="{{states.stamina}}" disabled />
              <span class="muted">= Nivel en Vigor + Tenacidad</span>
            </div>
            <div class="t-field">
              <label>Fatiga</label>
              <input type="number" name="system.states.fatigue" value="{{states.fatigue}}" min="0" max="5" />
              <span class="muted">0–5 (mitigada por Aguante)</span>
            </div>
            <div class="t-field">
              <label>Desgaste</label>
              <input type="number" name="system.states.wear" value="{{states.wear}}" min="0" max="{{states.wearMax}}" />
              <span class="muted">Límite actual: {{states.wearMax}} (= Aguante – Fatiga)</span>
            </div>
          </div>
        </div>

        {{#if (and woundZones.length (eq actor.type "character"))}}
        <div class="t-card t-col">
          <h3 style="margin:0 0 6px 0;">Heridas por zona</h3>
          {{#if woundStatusLabel}}<span class="muted">Estado general: {{woundStatusLabel}}</span>{{/if}}
          <div class="t-col" style="gap:6px;">
            {{#each woundZones}}
              <div class="t-row" style="justify-content:space-between; gap:8px; align-items:center;">
                <div style="min-width:110px;"><strong>{{this.label}}</strong></div>
                <div class="tsdc-wound-slots">
                  {{#each this.slots}}
                    <span class="tsdc-wound-slot {{#if this}}filled{{/if}}"></span>
                  {{/each}}
                </div>
                <span class="muted">{{this.used}} / {{this.max}}</span>
              </div>
            {{/each}}
          </div>
        </div>
        {{/if}}

        {{!-- HP por partes (para criaturas) --}}
        {{#if (and healthParts.length (eq actor.type "creature"))}}
        <div class="t-card t-col">
          <h3 style="margin:0 0 6px 0;">HP por Parte del Cuerpo</h3>
          <div class="t-col" style="gap:6px;">
            {{#each healthParts}}
              <div class="t-row" style="justify-content:space-between; gap:8px; align-items:center; {{#if this.disabled}}opacity: 0.5;{{/if}}">
                <div style="min-width:110px;">
                  <strong>{{this.label}}</strong>
                  {{#if this.disabled}}
                    <span class="muted" style="color: #e53e3e;"> (Destruida)</span>
                  {{/if}}
                </div>
                <div class="t-row" style="gap:4px; align-items:center;">
                  {{#if this.material}}
                    <span class="muted" style="font-size: 0.85em;">{{this.material}}</span>
                  {{/if}}
                  <div class="tsdc-hp-bar" style="width: 100px; height: 20px; background: rgba(0,0,0,0.3); border-radius: 4px; overflow: hidden; position: relative;">
                    <div style="width: {{#if (gt this.max 0)}}{{multiply (divide this.value this.max) 100}}{{else}}0{{/if}}%; height: 100%; background: {{#if (gt this.value (multiply this.max 0.5))}}#48bb78{{else if (gt this.value 0)}}#ed8936{{else}}#e53e3e{{/if}}; transition: width 0.3s;"></div>
                    <span style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-size: 0.85em; font-weight: bold; color: white; text-shadow: 0 0 2px black;">{{this.value}} / {{this.max}}</span>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
        {{/if}}

        {{!-- Efectos activos --}}
        {{#if activeEffects.length}}
        <div class="t-card t-col">
          <h3 style="margin:0 0 6px 0;">Efectos Activos</h3>
          <div class="t-col" style="gap:8px;">
            {{#each activeEffects}}
              <div class="t-col" style="border-left: 3px solid {{#if (eq this.group 'elemental')}}#8b5cf6{{else}}#f59e0b{{/if}}; padding-left: 8px; background: rgba(0,0,0,0.1); padding: 8px; border-radius: 4px;">
                <div class="t-row" style="justify-content: space-between; align-items: center;">
                  <div>
                    <strong>{{this.label}}</strong>
                    {{#if this.severity}}<span class="muted"> ({{this.severity}})</span>{{/if}}
                    {{#if this.magnitude}}<span class="muted"> • {{this.magnitude}}</span>{{/if}}
                    {{#if this.zone}}<span class="muted"> • {{this.zone}}</span>{{/if}}
                  </div>
                  <button type="button" class="t-btn-icon" data-action="remove-ailment" data-ailment-id="{{this.id}}" title="Remover efecto">✖</button>
                </div>
                {{#if this.duration}}
                  <div class="muted" style="font-size: 0.85em;">Duración: {{this.duration}}</div>
                {{/if}}
                {{#if this.effects.length}}
                  <ul style="margin: 4px 0 0 0; padding-left: 20px; font-size: 0.9em;">
                    {{#each this.effects}}
                      <li>{{this}}</li>
                    {{/each}}
                  </ul>
                {{/if}}
              </div>
            {{/each}}
          </div>
        </div>
        {{/if}}
      </div>

      <div class="t-card t-col">
        <h3 style="margin:0 0 6px 0;">Rasgos de personalidad</h3>
        <div class="t-row" style="gap:12px; flex-wrap:wrap;">
          {{#each personalityTraits}}
            <div class="t-field" style="flex:1 1 180px; min-width:160px;">
              <label>Rasgo {{this.index}}</label>
              <input type="text" name="{{this.name}}" value="{{this.value}}" maxlength="60" />
            </div>
          {{/each}}
        </div>
      </div>

      {{!-- Bloque de características + derivados + extra en grilla 3 columnas --}}
      <div class="t-grid t-grid-3">

        {{!-- Características --}}
        <div class="t-card t-col">
          <h3 style="margin:0 0 6px 0;">Características</h3>

          <h4 class="muted" style="margin:4px 0;">Físicas</h4>
          <div class="t-grid t-grid-3" style="gap:8px;">
            <div class="t-field"><label>Fuerza</label><input type="number" name="system.attributes.strength" value="{{system.attributes.strength}}" /></div>
            <div class="t-field"><label>Agilidad</label><input type="number" name="system.attributes.agility" value="{{system.attributes.agility}}" /></div>
            <div class="t-field"><label>Tenacidad</label><input type="number" name="system.attributes.tenacity" value="{{system.attributes.tenacity}}" /></div>
          </div>

          <h4 class="muted" style="margin:8px 0 4px;">Mentales</h4>
          <div class="t-grid t-grid-3" style="gap:8px;">
            <div class="t-field"><label>Astucia</label><input type="number" name="system.attributes.cunning" value="{{system.attributes.cunning}}" /></div>
            <div class="t-field"><label>Sabiduría</label><input type="number" name="system.attributes.wisdom" value="{{system.attributes.wisdom}}" /></div>
            <div class="t-field"><label>Intelecto</label><input type="number" name="system.attributes.intellect" value="{{system.attributes.intellect}}" /></div>
          </div>

          <h4 class="muted" style="margin:8px 0 4px;">Sociales</h4>
          <div class="t-grid t-grid-3" style="gap:8px;">
            <div class="t-field"><label>Presencia</label><input type="number" name="system.attributes.presence" value="{{system.attributes.presence}}" /></div>
            <div class="t-field"><label>Compostura</label><input type="number" name="system.attributes.composure" value="{{system.attributes.composure}}" /></div>
            <div class="t-field"><label>Aura</label><input type="number" name="system.attributes.aura" value="{{system.attributes.aura}}" /></div>
          </div>
        </div>

        {{!-- Derivados --}}
        <div class="t-card t-col">
          <h3 style="margin:0 0 6px 0;">Derivados</h3>
          <div class="t-field">
            <label>Preparación</label>
            <input type="number" name="system.derived.preparation" value="{{system.derived.preparation}}" />
          </div>
          <div class="t-field">
            <label>Resiliencia</label>
            <input type="number" name="system.derived.resilience" value="{{system.derived.resilience}}" />
          </div>
          <span class="muted">Se recalculan automáticamente con tus atributos.</span>
        </div>

        {{!-- Placeholder de layout libre --}}
      {{#if isGM}}
        <div class="t-card t-col">
          <h3 style="margin:0 0 6px 0;">Rasgos del Monstruo</h3>
          {{#if monsterTraits.length}}
            <ul class="t-col" style="margin:0; padding-left:16px; gap:4px;">
              {{#each monsterTraits}}
                <li style="list-style:disc inside;">
                  <strong>{{this.label}}</strong>
                  {{#if this.note}}
                    <span class="muted">— {{this.note}}</span>
                  {{/if}}
                </li>
              {{/each}}
            </ul>
          {{else}}
            <div class="muted">Sin rasgos registrados.</div>
          {{/if}}
        </div>
      {{/if}}

      {{#if healthParts.length}}
        <div class="t-card t-col">
          <h3 style="margin:0 0 6px 0;">Partes Anatómicas</h3>
          <table class="t-table">
            <thead>
              <tr>
                <th>Parte</th>
                <th>Durabilidad</th>
                <th>Potencia</th>
                <th>Material</th>
              </tr>
            </thead>
            <tbody>
              {{#each healthParts}}
                <tr class="{{#if this.disabled}}muted{{/if}}">
                  <td>{{this.label}}</td>
                  <td>{{this.value}} / {{this.max}}</td>
                  <td>{{this.potency}}</td>
                  <td>{{this.material}}</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      {{/if}}

      </div> {{!-- /t-grid 3 --}}

      {{!-- (Se elimina el bloque “Trasfondo / Afinidad (recordatorio)” para evitar duplicar Afinidad) --}}
    </div> {{!-- /tab main --}}

    {{!-- ================================
          TAB: TIRADAS
          ================================ --}}
    <div class="tab t-col" data-group="primary" data-tab="rolls" style="gap:12px;">

      {{!-- ATAQUE --}}
      <div class="t-card t-col">
        <h3 style="margin:0 0 6px 0;">Ataque</h3>
        <div class="t-row" style="gap:12px; align-items:flex-end;">
          <div class="t-field" style="min-width:220px;">
            <label>Arma equipada</label>
            <select name="atkWeapon">
              <option value="">— Principal (si hay) —</option>
              {{#if inventory.options.mainHand.length}}
                <optgroup label="Mano principal">
                  {{#each inventory.options.mainHand}}
                    <option value="{{this.id}}" {{#if this.selected}}selected{{/if}} {{#if this.disabled}}disabled title="{{this.disabledReason}}"{{else}}{{#if this.disabledReason}}title="{{this.disabledReason}}"{{/if}}{{/if}}>{{this.label}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
              {{#if inventory.options.offHand.length}}
                <optgroup label="Mano secundaria">
                  {{#each inventory.options.offHand}}
                    <option value="{{this.id}}" {{#if this.selected}}selected{{/if}} {{#if this.disabled}}disabled title="{{this.disabledReason}}"{{else}}{{#if this.disabledReason}}title="{{this.disabledReason}}"{{/if}}{{/if}}>{{this.label}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
              {{#if inventory.naturalAux.length}}
                <optgroup label="Armas naturales">
                  {{#each inventory.naturalAux}}
                    <option value="{{this.id}}" {{#if this.disabled}}disabled title="{{this.disabledReason}}"{{else}}{{#if this.disabledReason}}title="{{this.disabledReason}}"{{/if}}{{/if}}>{{this.label}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
            </select>
          </div>
          <div class="t-field" style="width:120px;">
            <label>¿Es maniobra?</label>
            <input type="checkbox" name="atkIsManeuver" />
          </div>
          <div class="t-field" style="min-width:160px;">
            <label>Atributo (por defecto: el del arma)</label>
            <select name="atkAttr">
              <option value="" {{#if (eq rollDefaults.attack.attr "")}}selected{{/if}}>— Automático —</option>
              <option value="strength" {{#if (eq rollDefaults.attack.attr "strength")}}selected{{/if}}>Fuerza</option>
              <option value="agility"  {{#if (eq rollDefaults.attack.attr "agility")}}selected{{/if}}>Agilidad</option>
              <option value="tenacity" {{#if (eq rollDefaults.attack.attr "tenacity")}}selected{{/if}}>Tenacidad</option>
              <option value="cunning" {{#if (eq rollDefaults.attack.attr "cunning")}}selected{{/if}}>Astucia</option>
              <option value="wisdom" {{#if (eq rollDefaults.attack.attr "wisdom")}}selected{{/if}}>Sabiduría</option>
              <option value="intellect" {{#if (eq rollDefaults.attack.attr "intellect")}}selected{{/if}}>Intelecto</option>
              <option value="aura" {{#if (eq rollDefaults.attack.attr "aura")}}selected{{/if}}>Aura</option>
              <option value="composure" {{#if (eq rollDefaults.attack.attr "composure")}}selected{{/if}}>Compostura</option>
              <option value="presence" {{#if (eq rollDefaults.attack.attr "presence")}}selected{{/if}}>Presencia</option>
            </select>
          </div>
          <div class="t-field" style="width:100px;">
            <label>Bono</label>
            <input type="number" name="atkBonus" value="{{rollDefaults.attack.bonus}}"/>
          </div>
          <div class="t-field" style="width:100px;">
            <label>Penal.</label>
            <input type="number" name="atkPenalty" value="{{rollDefaults.attack.penalty}}"/>
          </div>
          <button type="button" class="t-btn" data-action="atk-roll">Tirar Ataque</button>
        </div>
        <span class="muted">Usa 1d10 + competencia (arma/maniobra) + atributo + bono - penal. El atributo por defecto lo da el arma.</span>
      </div>

      {{!-- IMPACTO --}}
      <div class="t-card t-col">
        <h3 style="margin:0 0 6px 0;">Impacto (cuerpo a cuerpo)</h3>
        <div class="t-row" style="gap:12px; align-items:flex-end;">
          <div class="t-field" style="min-width:220px;">
            <label>Arma equipada</label>
            <select name="impWeapon">
              <option value="">— Principal (si hay) —</option>
              {{#if inventory.options.mainHand.length}}
                <optgroup label="Mano principal">
                  {{#each inventory.options.mainHand}}
                    <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
              {{#if inventory.options.offHand.length}}
                <optgroup label="Mano secundaria">
                  {{#each inventory.options.offHand}}
                    <option value="{{this.id}}" {{#if this.selected}}selected{{/if}} {{#if this.disabled}}disabled title="{{this.disabledReason}}"{{else}}{{#if this.disabledReason}}title="{{this.disabledReason}}"{{/if}}{{/if}}>{{this.label}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
              {{#if inventory.naturalAux.length}}
                <optgroup label="Armas naturales">
                  {{#each inventory.naturalAux}}
                    <option value="{{this.id}}" {{#if this.disabled}}disabled title="{{this.disabledReason}}"{{else}}{{#if this.disabledReason}}title="{{this.disabledReason}}"{{/if}}{{/if}}>{{this.label}}</option>
                  {{/each}}
                </optgroup>
              {{/if}}
            </select>
          </div>
          <div class="t-field" style="width:120px;">
            <label>Bono</label>
            <input type="number" name="impBonus" value="0"/>
          </div>
          <button type="button" class="t-btn" data-action="imp-roll">Tirar Impacto</button>
        </div>
        <span class="muted">(rango × dadoDelArma) + (atributoDelArma × gradoDelArma + bono). Todo se lee del arma equipada.</span>
      </div>

      {{!-- DEFENSA --}}
      <div class="t-card t-col">
        <h3 style="margin:0 0 6px 0;">Defensa</h3>
        <div class="t-row" style="gap:12px; align-items:flex-end;">
          <div class="t-field" style="min-width:160px;">
            <label>Tipo de armadura (para progreso si fallas)</label>
            <select name="defArmorType">
              <option value="light"   {{#if (eq rollDefaults.defense.armorType "light")}}selected{{/if}}>Ligera</option>
              <option value="medium"  {{#if (eq rollDefaults.defense.armorType "medium")}}selected{{/if}}>Intermedia</option>
              <option value="heavy"   {{#if (eq rollDefaults.defense.armorType "heavy")}}selected{{/if}}>Pesada</option>
            </select>
          </div>
          <div class="t-field" style="width:100px;">
            <label>Bono</label>
            <input type="number" name="defBonus"   value="{{rollDefaults.defense.bonus}}"/>
          </div>
          <div class="t-field" style="width:100px;">
            <label>Penal.</label>
            <input type="number" name="defPenalty" value="{{rollDefaults.defense.penalty}}"/>
          </div>
          <button type="button" class="t-btn" data-action="def-roll">Tirar Defensa</button>
        </div>
        <span class="muted">El bono de armadura se calcula automáticamente desde tus piezas equipadas y el escudo.</span>
      </div>

      {{!-- CARACTERÍSTICAS --}}
      <div class="t-card t-col">
        <h3 style="margin:0 0 6px 0;">Tirada de Característica</h3>
        <div class="t-row" style="gap:12px; align-items:flex-end; flex-wrap:wrap;">
          <div class="t-field" style="min-width:200px;">
            <label>Característica</label>
            <select name="charAttr">
              <option value="">— Seleccionar —</option>
              {{#each characteristicsList}}
                <option value="{{this.key}}" {{#if (eq ../rollDefaults.characteristic.attr this.key)}}selected{{/if}}>{{this.label}}</option>
              {{/each}}
            </select>
          </div>
          <div class="t-field" style="width:100px;">
            <label>Bono</label>
            <input type="number" name="charBonus" value="{{rollDefaults.characteristic.bonus}}"/>
          </div>
          <div class="t-field" style="width:100px;">
            <label>Penal.</label>
            <input type="number" name="charPenalty" value="{{rollDefaults.characteristic.penalty}}"/>
          </div>
          <button type="button" class="t-btn" data-action="char-roll">Tirar Característica</button>
        </div>
        <span class="muted">Formula: 1d10 + característica + nivel de referencia ({{referenceLevel}}) + bono − penal.</span>
      </div>

      {{!-- RESISTENCIAS --}}
      <div class="t-card t-col">
        <h3 style="margin:0 0 6px 0;">Resistencias</h3>
        <div class="t-row" style="gap:12px; align-items:flex-end;">
          <div class="t-field" style="min-width:180px;">
            <label>Tipo</label>
            <select name="resType">
              <option value="poison"     {{#if (eq rollDefaults.resistance.type "poison")}}selected{{/if}}>Veneno</option>
              <option value="infection"  {{#if (eq rollDefaults.resistance.type "infection")}}selected{{/if}}>Infección</option>
              <option value="affliction" {{#if (eq rollDefaults.resistance.type "affliction")}}selected{{/if}}>Aflicción</option>
              <option value="curse"      {{#if (eq rollDefaults.resistance.type "curse")}}selected{{/if}}>Maldición</option>
              <option value="alteration" {{#if (eq rollDefaults.resistance.type "alteration")}}selected{{/if}}>Alteración</option>
              <option value="water"      {{#if (eq rollDefaults.resistance.type "water")}}selected{{/if}}>Agua</option>
              <option value="fire"       {{#if (eq rollDefaults.resistance.type "fire")}}selected{{/if}}>Fuego</option>
              <option value="earth"      {{#if (eq rollDefaults.resistance.type "earth")}}selected{{/if}}>Tierra</option>
              <option value="air"        {{#if (eq rollDefaults.resistance.type "air")}}selected{{/if}}>Viento</option>
              <option value="light"      {{#if (eq rollDefaults.resistance.type "light")}}selected{{/if}}>Luz</option>
              <option value="dark"       {{#if (eq rollDefaults.resistance.type "dark")}}selected{{/if}}>Oscuridad</option>
            </select>
          </div>
          <div class="t-field" style="width:100px;">
            <label>Bono</label>
            <input type="number" name="resBonus" value="0"/>
          </div>
          <div class="t-field" style="width:100px;">
            <label>Penal.</label>
            <input type="number" name="resPenalty" value="0"/>
          </div>
          <button type="button" class="t-btn" data-action="res-roll">Tirar Resistencia</button>
        </div>
        <span class="muted">Un solo dado (sin elección). Fallo → progreso en esa resistencia.</span>
      </div>

    </div> {{!-- /tab rolls --}}

    {{!-- ================================
          TAB: ESPECIALIZACIONES
          ================================ --}}
    <div class="tab t-col" data-group="primary" data-tab="specs" style="gap:12px;">

      <div class="t-row" style="gap:8px;">
        <div class="t-field" style="flex:1;">
          <label>Buscar</label>
          <input type="text" name="specSearch" placeholder="Escribe para filtrar (p. ej. arqueo, acro, nego...)" />
        </div>
        <div class="t-field">
          <label>Mostrar</label>
          <select name="specFilter">
            <option value="all">Todas</option>
            <option value="favorites">Favoritas</option>
            <option value="physical">Físicas</option>
            <option value="mental">Mentales</option>
            <option value="social">Sociales</option>
            <option value="arts">Artes y Oficios</option>
            <option value="knowledge">Saberes</option>
          </select>
        </div>
      </div>

      {{#if specs.favorites.length}}
      <div class="t-card t-col">
        <h3 style="margin:0;">⭐ Favoritas</h3>
        <div class="t-col" style="gap:6px;">
          {{#each specs.favorites}}
            <div class="t-row" data-spec="{{this.key}}" style="gap:8px; align-items:center;">
              <strong style="min-width:160px;">{{this.label}}</strong>
              <span class="muted" title="Atributo base">{{loc (concat "TSDC.Attr." this.attrKey)}}</span>
