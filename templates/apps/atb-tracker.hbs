<div class="tsdc-atb-tracker">
  <header class="tt-head">
    <div class="tt-title">ATB — Tracker</div>
    <div class="tt-ticks" style="--cols: {{horizon}}">
      {{#each cols as |t|}}<div class="tt-tick">{{t}}</div>{{/each}}
    </div>
  </header>

  <section class="tt-rows">
    {{#each rows as |row|}}
      <div class="tt-row">
        <div class="tt-who">{{row.name}}</div>
        <div class="tt-line" style="--cols: {{../horizon}}">
          {{#each row.segments}}
            <div class="tt-seg phase-{{phase}}" style="grid-column: {{gridColumn}};">
              <span class="tt-label">{{label}}</span>
            </div>
          {{/each}}
        </div>
      </div>
    {{/each}}
  </section>

  <footer class="tt-foot">
    <div class="tt-foot">
      <button type="button" data-action="start">▶ Iniciar</button>
      <button type="button" data-action="pause">⏸ Pausa</button>
      <button type="button" data-action="step">⏭️ Avanzar 1</button>
      <button type="button" data-action="reset">↺ Reset</button>
      <span style="flex:1"></span>
      <button type="button" data-action="plan">Planear</button>
      <button type="button" data-action="close">Cerrar</button>
    </div>
  </footer>
</div>
